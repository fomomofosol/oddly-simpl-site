---
import HeaderLink from './HeaderLink.astro';
---

<header class="site-header">
	<nav class="container">
		<a href="/" class="logo">
			<span class="logo-text">simpl.</span>
		</a>
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/learn">Learn</HeaderLink>
			<HeaderLink href="/services">Services</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
	</nav>
</header>

<style>
	.site-header {
		background: white;
		border-bottom: 1px solid #eee;
		position: sticky;
		top: 0;
		z-index: 100;
	}
	
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 70px;
	}
	
	.logo {
		text-decoration: none;
		font-weight: 800;
		font-size: 1.5rem;
		color: #1a1a1a;
	}
	
	.logo-text {
		color: #1a1a1a;
	}
	
	.nav-links {
		display: flex;
		gap: 2rem;
	}
	
	@media (max-width: 768px) {
		.nav-links {
			display: none;
		}
	}
</style>
