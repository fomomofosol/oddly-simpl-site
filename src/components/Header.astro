---
const navLinks = [
	{ href: '/', text: 'Home' },
	{ href: '/learn', text: 'Learn' },
	{ href: '/services', text: 'Services' },
	{ href: '/about', text: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header class="site-header">
	<div class="header-inner max-width">
		<a href="/" class="logo">simpl.</a>
		<nav>
			<ul class="nav-menu">
				{navLinks.map(link => (
					<li class={currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) ? 'active' : ''}>
						<a href={link.href}>{link.text}</a>
					</li>
				))}
			</ul>
		</nav>
		<a class="btn btn--primary" href="#learn-more">launch a campaign</a>
	</div>
</header>

<style>
	.site-header {
		position: sticky;
		top: 0;
		width: 100%;
		z-index: 200;
		background: rgba(10, 11, 17, 0.8);
		backdrop-filter: blur(12px);
		border-bottom: 1px solid rgba(255, 255, 255, 0.05);
	}

	.header-inner {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 76px;
	}

	.logo {
		font-size: 1.35rem;
		font-weight: 700;
		letter-spacing: 0.15em;
		text-transform: uppercase;
		color: #fff;
		text-decoration: none;
	}

	.nav-menu {
		display: flex;
		align-items: center;
		gap: 2rem;
		list-style: none;
		margin: 0;
	}

	.nav-menu a {
		text-transform: uppercase;
		font-size: 0.85rem;
		letter-spacing: 0.3em;
		text-decoration: none;
		color: rgba(255, 255, 255, 0.8);
		transition: color 0.2s ease;
	}

	.nav-menu li.active a,
	.nav-menu a:hover {
		color: #fff;
	}

	@media (max-width: 900px) {
		.nav-menu {
			display: none;
		}
		
		.header-inner {
			gap: 1rem;
		}
	}
</style>
