---
const navLinks = [
	{ href: '/', text: 'Home' },
	{ href: '/learn', text: 'Learn' },
	{ href: '/services', text: 'Services' },
	{ href: '/about', text: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header class="site-header">
	<div class="container">
		<nav class="nav">
			<a href="/" class="logo">
				<img src="/images/new-simple-logo.jpg" alt="simpl." class="logo-img" />
			</a>
			
			<ul class="nav-menu">
				{navLinks.map(link => (
					<li class={currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) ? 'active' : ''}>
						<a href={link.href}>{link.text}</a>
					</li>
				))}
			</ul>
		</nav>
	</div>
</header>

<style>
	.site-header {
		background: #fff;
		border-bottom: 1px solid #eee;
		position: sticky;
		top: 0;
		z-index: 100;
	}
	
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}
	
	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 80px;
	}
	
	.logo {
		display: flex;
		align-items: center;
	}
	
	.logo-img {
		height: 40px;
		width: auto;
	}
	
	.nav-menu {
		display: flex;
		list-style: none;
		gap: 2rem;
	}
	
	.nav-menu a {
		text-decoration: none;
		color: #333;
		font-family: 'Poppins', sans-serif;
		font-weight: 500;
		font-size: 0.95rem;
		transition: color 0.2s;
		padding: 0.5rem 0;
	}
	
	.nav-menu a:hover,
	.nav-menu li.active a {
		color: #ff6b6b;
	}
	
	@media (max-width: 768px) {
		.nav-menu {
			display: none;
		}
	}
</style>
