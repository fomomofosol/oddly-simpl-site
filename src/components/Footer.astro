---
const today = new Date();
---

<footer class="site-footer">
	<div class="container">
		<div class="footer-grid">
			<div class="footer-brand">
				<span class="logo-text">simpl.</span>
				<p>Music marketing that actually works.</p>
			</div>
			
			<div class="footer-links">
				<h4>Quick Links</h4>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/learn">Learn</a></li>
					<li><a href="/services">Services</a></li>
					<li><a href="/about">About</a></li>
				</ul>
			</div>
			
			<div class="footer-social">
				<h4>Follow Us</h4>
				<div class="social-links">
					<a href="https://www.tiktok.com/@oddlysimpl" target="_blank" rel="noopener">TikTok</a>
					<a href="https://www.instagram.com/oddlysimpl/" target="_blank" rel="noopener">Instagram</a>
					<a href="https://www.linkedin.com/in/anthony-pacheco-264758132/" target="_blank" rel="noopener">LinkedIn</a>
					<a href="https://www.facebook.com/groups/oddlysimpl" target="_blank" rel="noopener">Facebook</a>
				</div>
			</div>
		</div>
		
		<div class="footer-bottom">
			<p>&copy; {today.getFullYear()} simpl. All rights reserved.</p>
			<div class="legal-links">
				<a href="/privacy">Privacy Policy</a>
				<a href="/return-policy">Return Policy</a>
			</div>
		</div>
	</div>
</footer>

<style>
	.site-footer {
		background: #1a1a2e;
		color: white;
		padding: 4rem 0 2rem;
	}
	
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}
	
	.footer-grid {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr;
		gap: 3rem;
		margin-bottom: 3rem;
	}
	
	.logo-text {
		font-size: 1.5rem;
		font-weight: 800;
		display: block;
		margin-bottom: 0.5rem;
	}
	
	.footer-links h4,
	.footer-social h4 {
		font-size: 1rem;
		margin-bottom: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		opacity: 0.8;
	}
	
	.footer-links ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	
	.footer-links li {
		margin-bottom: 0.5rem;
	}
	
	.footer-links a,
	.social-links a {
		color: rgba(255,255,255,0.7);
		text-decoration: none;
		transition: color 0.2s;
	}
	
	.footer-links a:hover,
	.social-links a:hover {
		color: white;
	}
	
	.social-links {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}
	
	.footer-bottom {
		border-top: 1px solid rgba(255,255,255,0.1);
		padding-top: 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}
	
	.footer-bottom p {
		margin: 0;
		opacity: 0.6;
	}
	
	.legal-links {
		display: flex;
		gap: 2rem;
	}
	
	.legal-links a {
		color: rgba(255,255,255,0.6);
		text-decoration: none;
		font-size: 0.9rem;
	}
	
	.legal-links a:hover {
		color: white;
	}
	
	@media (max-width: 768px) {
		.footer-grid {
			grid-template-columns: 1fr;
		}
		.footer-bottom {
			flex-direction: column;
			text-align: center;
		}
	}
</style>
