---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description: string;
	image?: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--color-primary: #ff6b6b;
		--color-primary-dark: #e55a5a;
		--color-dark: #0a0b11;
		--color-dark-alt: #141621;
		--color-light: #f4f4fa;
		--color-muted: #a9aab6;
		--font-heading: 'Poppins', sans-serif;
		--font-body: 'Montserrat', sans-serif;
	}

	* {
		box-sizing: border-box;
	}

	body {
		margin: 0;
		font-family: var(--font-body);
		font-size: 16px;
		line-height: 1.7;
		background: var(--color-dark);
		color: #fff;
		min-height: 100vh;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-heading);
		font-weight: 600;
		line-height: 1.2;
		letter-spacing: 0.02em;
	}

	main {
		width: 100%;
	}

	section {
		width: 100%;
	}

	a {
		color: inherit;
	}

	p {
		color: #e2e2ea;
	}

	ul, ol {
		padding-left: 1.25rem;
		color: #e2e2ea;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.85rem 2.25rem;
		border-radius: 999px;
		font-weight: 600;
		text-transform: lowercase;
		letter-spacing: 0.02em;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.btn--primary {
		background: var(--color-primary);
		color: #fff;
		box-shadow: 0 20px 40px rgba(255, 107, 107, 0.35);
	}

	.btn--primary:hover {
		transform: translateY(-3px);
		box-shadow: 0 25px 50px rgba(255, 107, 107, 0.45);
	}

	.section { /* helper class for consistent padding */
		padding: 4rem 0;
	}

	.max-width {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}
</style>
