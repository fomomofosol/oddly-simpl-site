---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Learn | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="page-header">
				<div class="container">
					<h1>Music Marketing Blog</h1>
					<p class="lead">Learn Spotify best practices, music marketing strategy, pre-save tips, and more.</p>
				</div>
			</section>

			<section class="blog-list">
				<div class="container">
					<div class="posts-grid">
						{posts.map((post) => (
							<article class="post-card">
								<a href={`/learn/${post.slug}/`}>
									<h2>{post.data.title}</h2>
									<p class="post-description">{post.data.description?.slice(0, 200)}...</p>
									<time datetime={post.data.pubDate.toISOString()}>
										<FormattedDate date={post.data.pubDate} />
									</time>
								</a>
							</article>
						))}
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.page-header {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		padding: 5rem 0;
		text-align: center;
	}

	.page-header h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.lead {
		font-size: 1.25rem;
		opacity: 0.9;
	}

	.blog-list {
		padding: 4rem 0;
	}

	.posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2rem;
	}

	.post-card {
		background: white;
		border-radius: 12px;
		box-shadow: 0 4px 20px rgba(0,0,0,0.05);
		transition: transform 0.2s, box-shadow 0.2s;
	}

	.post-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 10px 40px rgba(0,0,0,0.1);
	}

	.post-card a {
		display: block;
		padding: 2rem;
		color: inherit;
		text-decoration: none;
	}

	.post-card h2 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: #1a1a1a;
	}

	.post-description {
		color: #666;
		margin-bottom: 1rem;
		line-height: 1.6;
	}

	.post-card time {
		color: #999;
		font-size: 0.9rem;
	}

	@media (max-width: 768px) {
		.posts-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
